<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xalendar.View.Controls.CalendarView">
    <StackLayout Spacing="0">
        <FlexLayout BindableLayout.ItemsSource="{Binding DaysOfWeek}" Wrap="Wrap">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label FlexLayout.Basis="14.28%" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding .}" FontSize="Body" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
        
        <FlexLayout BindableLayout.ItemsSource="{Binding Days}" Wrap="Wrap">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Label FlexLayout.Basis="14.28%" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding .}" FontSize="Subtitle" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
    </StackLayout>
</ContentView>